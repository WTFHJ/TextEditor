<UserControl x:Class="TextEditor.UserControls.CustomToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextEditor.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <ToolBarTray x:Name="toolbar" 
     DockPanel.Dock="Top">
        <ToolBar>
            <Button ToolTip="Open">
                <Image Source="../Icons/folder_icon.png"
           Width="20"
           Height="20"/>
            </Button>
            <Button ToolTip="Save">
                <Image Source="../Icons/save_icon.png"
           Width="20"
           Height="20"/>
            </Button>
        </ToolBar>

        <ToolBar>
            <Button ToolTip="Cut">
                <Image Source="../Icons/folder_icon.png"
   Width="20"
   Height="20"/>
            </Button>
            <Button ToolTip="Copy">
                <Image Source="../Icons/save_icon.png"
   Width="20"
   Height="20"/>
            </Button>
            <Button ToolTip="Paste">
                <Image Source="../Icons/save_icon.png"
Width="20"
Height="20"/>
            </Button>
        </ToolBar>

        <ToolBar>
            <ToggleButton ToolTip="Bold" x:Name="boldBtn">
                <Image Source="../Icons/save_icon.png"
                       Width="20"/>
            </ToggleButton>
            <ToggleButton ToolTip="Italic" x:Name="italicBtn">
                <Image Source="../Icons/save_icon.png"
                        Width="20"/>
            </ToggleButton>
            <ToggleButton ToolTip="Underline" x:Name="underlineBtn">
                <Image Source="../Icons/save_icon.png" 
                       Width="20"/>
            </ToggleButton>
            <Separator/>
            <ComboBox x:Name="fonts"
                      MinWidth="100"
                      ToolTip="Font"
                      ItemsSource="{x:Static Fonts.SystemFontFamilies}"/>
            <ComboBox x:Name="fontSize"
                      MinWidth="40"
                      ToolTip="Font size"/>
        </ToolBar>
    </ToolBarTray>
</UserControl>
